<h3>Log in</h3>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :email_address %>
      <%= text_field_tag :email_address %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-success'%>
  <% end %>
</div>
